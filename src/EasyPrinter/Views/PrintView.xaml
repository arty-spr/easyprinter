<Page x:Class="EasyPrinter.Views.PrintView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Печать"
      Background="{StaticResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок с кнопкой назад -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Button Style="{StaticResource BackButtonStyle}"
                    HorizontalAlignment="Left"
                    Click="BackButton_Click"/>
            <TextBlock Text="ПЕЧАТЬ"
                       Style="{StaticResource TitleStyle}"
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*" MinWidth="350" MaxWidth="450"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель: Предпросмотр -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Выбор файла -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="FilePathTextBox"
                                 Grid.Column="0"
                                 Style="{StaticResource LargeTextBoxStyle}"
                                 IsReadOnly="True"
                                 Text="Выберите файл для печати..."
                                 Margin="0,0,10,0"/>

                        <Button Grid.Column="1"
                                Content="Обзор..."
                                Style="{StaticResource ActionButtonStyle}"
                                Width="150"
                                Click="BrowseButton_Click"/>
                    </Grid>

                    <!-- Область предпросмотра -->
                    <Border Grid.Row="1"
                            Background="#F0F0F0"
                            CornerRadius="5"
                            Padding="10">
                        <Grid>
                            <!-- Плейсхолдер когда файл не выбран -->
                            <TextBlock x:Name="PlaceholderText"
                                       Text="Здесь будет предпросмотр документа"
                                       Style="{StaticResource NormalTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <!-- Изображение предпросмотра -->
                            <ScrollViewer x:Name="PreviewScrollViewer"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          Visibility="Collapsed">
                                <Image x:Name="PreviewImage"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Навигация по страницам (для PDF) -->
                    <StackPanel x:Name="PageNavigationPanel"
                                Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0"
                                Visibility="Collapsed">
                        <Button Content="◀"
                                Width="50" Height="50"
                                FontSize="20"
                                Click="PrevPageButton_Click"/>
                        <TextBlock x:Name="PageInfoText"
                                   Text="Страница 1 из 1"
                                   Style="{StaticResource NormalTextStyle}"
                                   VerticalAlignment="Center"
                                   Margin="20,0"/>
                        <Button Content="▶"
                                Width="50" Height="50"
                                FontSize="20"
                                Click="NextPageButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Правая панель: Настройки -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Основные настройки -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Основные настройки"
                                       Style="{StaticResource SubtitleStyle}"/>

                            <TextBlock Text="Количество копий:" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="CopiesTextBox"
                                         Text="1"
                                         Style="{StaticResource LargeTextBoxStyle}"
                                         Width="80"
                                         HorizontalAlignment="Left"/>
                                <Button Grid.Column="1" Content="-" Width="45" Height="45"
                                        Click="DecreaseCopies_Click" Margin="5,0"/>
                                <Button Grid.Column="2" Content="+" Width="45" Height="45"
                                        Click="IncreaseCopies_Click"/>
                            </Grid>

                            <TextBlock Text="Размер бумаги:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="PaperSizeComboBox"
                                      Style="{StaticResource LargeComboBoxStyle}"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="A4 (210 x 297 мм)"/>
                                <ComboBoxItem Content="Letter (216 x 279 мм)"/>
                                <ComboBoxItem Content="Legal (216 x 356 мм)"/>
                                <ComboBoxItem Content="A5 (148 x 210 мм)"/>
                            </ComboBox>

                            <TextBlock Text="Источник бумаги:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="PaperSourceComboBox"
                                      Style="{StaticResource LargeComboBoxStyle}"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="Автоматически"/>
                                <ComboBoxItem Content="Лоток 1 (250 листов)"/>
                                <ComboBoxItem Content="Ручная подача"/>
                            </ComboBox>

                            <TextBlock Text="Качество печати:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="QualityComboBox"
                                      Style="{StaticResource LargeComboBoxStyle}"
                                      SelectedIndex="1">
                                <ComboBoxItem Content="Черновик (600 dpi)"/>
                                <ComboBoxItem Content="Нормальное"/>
                                <ComboBoxItem Content="Высокое (FastRes 1200)"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Дополнительные настройки -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Дополнительно"
                                       Style="{StaticResource SubtitleStyle}"/>

                            <TextBlock Text="Ориентация:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="OrientationComboBox"
                                      Style="{StaticResource LargeComboBoxStyle}"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="Книжная"/>
                                <ComboBoxItem Content="Альбомная"/>
                            </ComboBox>

                            <TextBlock Text="Диапазон страниц:" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="PageRangeComboBox"
                                          Style="{StaticResource LargeComboBoxStyle}"
                                          Width="150"
                                          SelectionChanged="PageRangeComboBox_SelectionChanged"
                                          SelectedIndex="0">
                                    <ComboBoxItem Content="Все"/>
                                    <ComboBoxItem Content="Текущая"/>
                                    <ComboBoxItem Content="Диапазон"/>
                                </ComboBox>
                                <TextBox x:Name="PageRangeTextBox"
                                         Grid.Column="1"
                                         Style="{StaticResource LargeTextBoxStyle}"
                                         Visibility="Collapsed"
                                         Margin="10,0,0,0"
                                         Text="1-5"/>
                            </Grid>

                            <TextBlock Text="Страниц на листе:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="PagesPerSheetComboBox"
                                      Style="{StaticResource LargeComboBoxStyle}"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="6"/>
                                <ComboBoxItem Content="9"/>
                                <ComboBoxItem Content="16"/>
                            </ComboBox>

                            <TextBlock Text="Масштаб:" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="ScaleSlider"
                                        Minimum="25" Maximum="400" Value="100"
                                        Style="{StaticResource LargeSliderStyle}"
                                        ValueChanged="ScaleSlider_ValueChanged"/>
                                <TextBlock x:Name="ScaleValueText"
                                           Grid.Column="1"
                                           Text="100%"
                                           Style="{StaticResource NormalTextStyle}"
                                           Width="60"
                                           TextAlignment="Right"/>
                            </Grid>

                            <CheckBox x:Name="DuplexCheckBox"
                                      Content="Двусторонняя печать (ручной дуплекс)"
                                      FontSize="{StaticResource FontSizeNormal}"
                                      Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Настройки изображения -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Настройки изображения"
                                       Style="{StaticResource SubtitleStyle}"/>

                            <TextBlock Text="Яркость:" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="BrightnessSlider"
                                        Minimum="-100" Maximum="100" Value="0"
                                        Style="{StaticResource LargeSliderStyle}"
                                        ValueChanged="ImageAdjustment_ValueChanged"/>
                                <TextBlock x:Name="BrightnessValueText"
                                           Grid.Column="1"
                                           Text="0"
                                           Style="{StaticResource NormalTextStyle}"
                                           Width="50"
                                           TextAlignment="Right"/>
                            </Grid>

                            <TextBlock Text="Контрастность:" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="ContrastSlider"
                                        Minimum="-100" Maximum="100" Value="0"
                                        Style="{StaticResource LargeSliderStyle}"
                                        ValueChanged="ImageAdjustment_ValueChanged"/>
                                <TextBlock x:Name="ContrastValueText"
                                           Grid.Column="1"
                                           Text="0"
                                           Style="{StaticResource NormalTextStyle}"
                                           Width="50"
                                           TextAlignment="Right"/>
                            </Grid>

                            <TextBlock Text="Резкость:" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="SharpnessSlider"
                                        Minimum="0" Maximum="100" Value="0"
                                        Style="{StaticResource LargeSliderStyle}"
                                        ValueChanged="ImageAdjustment_ValueChanged"/>
                                <TextBlock x:Name="SharpnessValueText"
                                           Grid.Column="1"
                                           Text="0"
                                           Style="{StaticResource NormalTextStyle}"
                                           Width="50"
                                           TextAlignment="Right"/>
                            </Grid>

                            <TextBlock Text="Гамма:" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="GammaSlider"
                                        Minimum="10" Maximum="300" Value="100"
                                        Style="{StaticResource LargeSliderStyle}"
                                        ValueChanged="ImageAdjustment_ValueChanged"/>
                                <TextBlock x:Name="GammaValueText"
                                           Grid.Column="1"
                                           Text="1.0"
                                           Style="{StaticResource NormalTextStyle}"
                                           Width="50"
                                           TextAlignment="Right"/>
                            </Grid>

                            <Button Content="Сбросить настройки"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#757575"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,10,0,0"
                                    Click="ResetImageSettings_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Кнопка печати -->
        <Button x:Name="PrintButton"
                Grid.Row="2"
                Content="ПЕЧАТЬ"
                Style="{StaticResource SuccessButtonStyle}"
                Height="80"
                FontSize="28"
                Margin="0,20,0,0"
                IsEnabled="False"
                Click="PrintButton_Click"/>
    </Grid>
</Page>
