<Page x:Class="EasyPrinter.Views.ScanView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Сканирование"
      Background="{StaticResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Button Style="{StaticResource BackButtonStyle}"
                    HorizontalAlignment="Left"
                    Click="BackButton_Click"/>
            <TextBlock Text="СКАНИРОВАНИЕ"
                       Style="{StaticResource TitleStyle}"
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*" MinWidth="350" MaxWidth="450"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель: Предпросмотр -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Предпросмотр скана"
                               Style="{StaticResource SubtitleStyle}"
                               Margin="0,0,0,15"/>

                    <!-- Область предпросмотра -->
                    <Border Grid.Row="1"
                            Background="#F0F0F0"
                            CornerRadius="5"
                            Padding="10">
                        <Grid>
                            <!-- Плейсхолдер -->
                            <StackPanel x:Name="PlaceholderPanel"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <TextBlock Text="&#128196;"
                                           FontSize="80"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="Нажмите 'Сканировать' для начала"
                                           Style="{StaticResource NormalTextStyle}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,20,0,0"/>
                            </StackPanel>

                            <!-- Прогресс сканирования -->
                            <StackPanel x:Name="ProgressPanel"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed">
                                <ProgressBar x:Name="ScanProgressBar"
                                             Width="300"
                                             Height="30"
                                             IsIndeterminate="False"
                                             Maximum="100"/>
                                <TextBlock x:Name="ProgressText"
                                           Text="Сканирование..."
                                           Style="{StaticResource NormalTextStyle}"
                                           HorizontalAlignment="Center"
                                           Margin="0,15,0,0"/>
                            </StackPanel>

                            <!-- Результат сканирования -->
                            <ScrollViewer x:Name="PreviewScrollViewer"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          Visibility="Collapsed">
                                <Image x:Name="PreviewImage"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Правая панель: Настройки -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Настройки сканирования -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Настройки сканирования"
                                       Style="{StaticResource SubtitleStyle}"/>

                            <TextBlock Text="Источник:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="SourceComboBox"
                                      Style="{StaticResource LargeComboBoxStyle}"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="Стекло сканера"/>
                                <ComboBoxItem Content="Автоподатчик (АПД)"/>
                            </ComboBox>

                            <TextBlock Text="Разрешение:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="ResolutionComboBox"
                                      Style="{StaticResource LargeComboBoxStyle}"
                                      SelectedIndex="1">
                                <ComboBoxItem Content="150 dpi (быстро)"/>
                                <ComboBoxItem Content="300 dpi (стандарт)"/>
                                <ComboBoxItem Content="600 dpi (высокое качество)"/>
                                <ComboBoxItem Content="1200 dpi (максимум)"/>
                            </ComboBox>

                            <TextBlock Text="Формат сохранения:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="FormatComboBox"
                                      Style="{StaticResource LargeComboBoxStyle}"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="PDF"/>
                                <ComboBoxItem Content="JPEG"/>
                                <ComboBoxItem Content="PNG"/>
                                <ComboBoxItem Content="TIFF"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Папка сохранения -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Сохранение"
                                       Style="{StaticResource SubtitleStyle}"/>

                            <TextBlock Text="Имя файла:" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="FileNameTextBox"
                                     Style="{StaticResource LargeTextBoxStyle}"
                                     Text="Скан"/>

                            <TextBlock Text="Папка:" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="FolderTextBox"
                                         Grid.Column="0"
                                         Style="{StaticResource LargeTextBoxStyle}"
                                         IsReadOnly="True"
                                         Margin="0,0,10,0"/>
                                <Button Grid.Column="1"
                                        Content="..."
                                        Style="{StaticResource ActionButtonStyle}"
                                        Width="60"
                                        Click="BrowseFolderButton_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Настройки изображения -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Настройки изображения"
                                       Style="{StaticResource SubtitleStyle}"/>

                            <TextBlock Text="Яркость:" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="BrightnessSlider"
                                        Minimum="-100" Maximum="100" Value="0"
                                        Style="{StaticResource LargeSliderStyle}"
                                        ValueChanged="ImageAdjustment_ValueChanged"/>
                                <TextBlock x:Name="BrightnessValueText"
                                           Grid.Column="1"
                                           Text="0"
                                           Style="{StaticResource NormalTextStyle}"
                                           Width="50"
                                           TextAlignment="Right"/>
                            </Grid>

                            <TextBlock Text="Контрастность:" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="ContrastSlider"
                                        Minimum="-100" Maximum="100" Value="0"
                                        Style="{StaticResource LargeSliderStyle}"
                                        ValueChanged="ImageAdjustment_ValueChanged"/>
                                <TextBlock x:Name="ContrastValueText"
                                           Grid.Column="1"
                                           Text="0"
                                           Style="{StaticResource NormalTextStyle}"
                                           Width="50"
                                           TextAlignment="Right"/>
                            </Grid>

                            <TextBlock Text="Резкость:" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="SharpnessSlider"
                                        Minimum="0" Maximum="100" Value="0"
                                        Style="{StaticResource LargeSliderStyle}"
                                        ValueChanged="ImageAdjustment_ValueChanged"/>
                                <TextBlock x:Name="SharpnessValueText"
                                           Grid.Column="1"
                                           Text="0"
                                           Style="{StaticResource NormalTextStyle}"
                                           Width="50"
                                           TextAlignment="Right"/>
                            </Grid>

                            <Button Content="Сбросить"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#757575"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,10,0,0"
                                    Click="ResetImageSettings_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Кнопки действий -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ScanButton"
                    Grid.Column="0"
                    Content="СКАНИРОВАТЬ"
                    Style="{StaticResource ActionButtonStyle}"
                    Height="80"
                    FontSize="24"
                    Click="ScanButton_Click"/>

            <Button x:Name="SaveButton"
                    Grid.Column="2"
                    Content="СОХРАНИТЬ"
                    Style="{StaticResource SuccessButtonStyle}"
                    Height="80"
                    FontSize="24"
                    IsEnabled="False"
                    Click="SaveButton_Click"/>
        </Grid>
    </Grid>
</Page>
