<Window x:Class="EasyPrinter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:EasyPrinter.Views"
        Title="EasyPrinter - HP LaserJet M1536dnf"
        Height="800" Width="1100"
        MinHeight="700" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основной контент -->
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden"
               Grid.Row="0"/>

        <!-- Статусная строка -->
        <Border Grid.Row="1" Style="{StaticResource StatusBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Статус принтера -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse x:Name="StatusIndicator"
                             Style="{StaticResource StatusIndicatorStyle}"
                             Fill="{StaticResource SuccessBrush}"/>
                    <TextBlock x:Name="PrinterNameText"
                               Text="HP LaserJet M1536dnf"
                               Style="{StaticResource NormalTextStyle}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Статус подключения -->
                <TextBlock x:Name="StatusText"
                           Grid.Column="1"
                           Text="Готов к работе"
                           Style="{StaticResource NormalTextStyle}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource TextSecondaryBrush}"/>

                <!-- Уровень тонера -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Тонер: "
                               Style="{StaticResource NormalTextStyle}"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <ProgressBar x:Name="TonerLevel"
                                 Width="100"
                                 Height="20"
                                 Value="75"
                                 Maximum="100"
                                 Foreground="{StaticResource SuccessBrush}"
                                 Background="#E0E0E0"/>
                    <TextBlock x:Name="TonerPercentText"
                               Text=" 75%"
                               Style="{StaticResource NormalTextStyle}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
